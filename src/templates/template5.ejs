<!DOCTYPE html>
<html>
  <head>
    <title><%= portfolio.name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <style>
      body {
        margin: 0;
        display: flex;
        background: #eef2f7;
        font-family: Inter;
      }
      .sidebar {
        width: 280px;
        background: #1e1f26;
        color: white;
        padding: 25px;
        height: 100vh;
        position: sticky;
        top: 0;
        animation: slide 0.7s ease;
      }
      .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        overflow: hidden;
        margin: auto;
      }
      .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .main {
        flex: 1;
        padding: 30px;
      }
      .section {
        background: white;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        animation: fade 1s ease;
      }

      .projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 18px;
      }
      .project img {
        width: 100%;
        height: 140px;
        object-fit: cover;
        border-radius: 10px;
      }
      @keyframes slide {
        from {
          transform: translateX(-100px);
          opacity: 0;
        }
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }
      @keyframes fade {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @media (max-width: 900px) {
        body {
          flex-direction: column;
        }
        .sidebar {
          width: 100%;
          height: auto;
          position: relative;
        }
      }
    </style>
  </head>

  <body>
    <div class="sidebar">
      <div class="avatar"><img src="<%= portfolio.profileImageUrl %>" /></div>
      <h2 style="text-align: center"><%= portfolio.name %></h2>
      <p style="text-align: center"><%= portfolio.qualification %></p>
    </div>

    <div class="main">
      <div class="section">
        <h3>About</h3>
        <p><%= portfolio.about %></p>
      </div>

      <div class="section">
        <h3>Experience</h3>
        <p><%= portfolio.experience %></p>
      </div>

      <div class="section">
        <h3>Projects</h3>
        <div class="projects">
          <% portfolio.projects.forEach(p => { %>
          <div class="project">
            <% if(p.imageUrl){ %><img src="<%= p.imageUrl %>" /><% } %>
            <h4><%= p.title %></h4>
            <p><%= p.description %></p>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
