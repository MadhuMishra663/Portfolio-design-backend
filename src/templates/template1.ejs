<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= name %> - Portfolio</title>

    <!-- Font -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />

    <style>
      /* ---------------- GLOBAL ---------------- */
      body {
        margin: 0;
        background: #0d1224;
        font-family: "Poppins", sans-serif;
        color: white;
      }
      .container {
        width: 90%;
        max-width: 1100px;
        margin: auto;
      }

      /* HEADER */
      .header {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        padding: 15px 0;
        position: sticky;
        top: 0;
        z-index: 100;
      }
      .header-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .logo {
        font-size: 26px;
        color: #7d95ff;
        font-weight: 700;
      }
      .nav a {
        margin-left: 20px;
        text-decoration: none;
        color: #d0d6ff;
      }
      .nav a:hover {
        color: white;
      }

      .btn {
        background: #6d73ff;
        padding: 10px 18px;
        border-radius: 10px;
        color: white;
        text-decoration: none;
      }
      .btn:hover {
        opacity: 0.8;
      }
      .outline {
        background: transparent;
        border: 2px solid #6d73ff;
      }

      /* HERO */
      .hero {
        padding: 80px 0;
      }
      .hero-flex {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
      }
      .hero-img {
        width: 300px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
      }
      .accent {
        color: #6c7dff;
      }
      .quote {
        opacity: 0.75;
      }

      /* SECTIONS */
      .section {
        margin: 60px 0;
        background: rgba(255, 255, 255, 0.03);
        padding: 30px;
        border-radius: 12px;
      }
      .section-title {
        font-size: 26px;
        margin-bottom: 15px;
      }

      /* INTERESTS */
      .interests {
        list-style: none;
        padding: 0;
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
      }

      /* SKILLS */
      .skills-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
      }
      .skill {
        padding: 8px 14px;
        background: #101830;
        border-radius: 8px;
      }

      /* PROJECTS */
      .projects-grid {
        display: grid;
        gap: 18px;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      }
      .project-card {
        background: #111a35;
        border-radius: 12px;
        overflow: hidden;
        transition: 0.3s;
      }
      .project-card:hover {
        transform: translateY(-8px);
      }
      .project-img {
        width: 100%;
        height: 160px;
        object-fit: cover;
      }
      .project-content {
        padding: 15px;
      }
      .proj-links a {
        margin-right: 12px;
        color: #8ca2ff;
        text-decoration: none;
      }

      /* STATS */
      .stats-img {
        width: 100%;
        margin-top: 12px;
        border-radius: 12px;
      }

      /* CONTACT */
      .contact-links a {
        margin-right: 20px;
        color: #8ca2ff;
        text-decoration: none;
      }

      /* FOOTER */
      .footer {
        text-align: center;
        opacity: 0.6;
        padding: 25px 0;
      }
    </style>
  </head>

  <body>
    <!-- HEADER -->
    <header class="header">
      <div class="container header-flex">
        <h1 class="logo"><%= name %></h1>

        <nav class="nav">
          <a href="#home">Home</a>
          <a href="#about">About</a>
          <a href="#skills">Skills</a>
          <a href="#projects">Projects</a>
          <a href="#stats">Statistics</a>
          <a href="#contact">Contact</a>
          <a href="<%= resumeUrl %>" class="btn" target="_blank">Resume</a>
        </nav>
      </div>
    </header>

    <!-- HERO -->
    <section class="hero" id="home">
      <div class="container hero-flex">
        <div>
          <h2>Hello ðŸ‘‹, I'm <span class="accent"><%= name %></span></h2>
          <h3 class="typing"><%= role || "Fullstack Developer" %></h3>

          <p class="quote">
            <%= quote || "I am nothing but i can do everything" %>
          </p>

          <div>
            <h3>Send Me a Message</h3>

            <form action="/portfolio/<%= slug %>/contact" method="POST">
              <input
                type="text"
                name="name"
                placeholder="Your Name"
                required
                style="
                  width: 100%;
                  padding: 10px;
                  margin: 8px 0;
                  border-radius: 6px;
                  border: none;
                "
              />

              <input
                type="email"
                name="email"
                placeholder="Your Email"
                required
                style="
                  width: 100%;
                  padding: 10px;
                  margin: 8px 0;
                  border-radius: 6px;
                  border: none;
                "
              />

              <textarea
                name="message"
                placeholder="Your Message"
                required
                style="
                  width: 100%;
                  padding: 10px;
                  margin: 8px 0;
                  border-radius: 6px;
                  border: none;
                  height: 120px;
                "
              ></textarea>

              <button
                type="submit"
                class="btn"
                style="margin-top: 10px; width: 100%"
              >
                Send
              </button>
            </form>
            <a href="<%= downloadUrl %>" class="btn outline" target="_blank"
              >Download CV</a
            >
          </div>
        </div>

        <img src="<%= profileImageUrl %>" class="hero-img" alt="Profile" />
      </div>
    </section>

    <!-- ABOUT -->
    <section class="section" id="about">
      <div class="container">
        <h2 class="section-title">About Me</h2>
        <p><%= about %></p>

        <h3>Interests</h3>
        <ul class="interests">
          <% interests.forEach(i => { %>
          <li><%= i %></li>
          <% }) %>
        </ul>
      </div>
    </section>

    <!-- SKILLS -->
    <section class="section" id="skills">
      <div class="container">
        <h2 class="section-title">Skills</h2>

        <div class="skills-grid">
          <% skills.forEach(skill => { %>
          <span class="skill"><%= skill %></span>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- PROJECTS -->
    <section class="section" id="projects">
      <div class="container">
        <h2 class="section-title">Projects</h2>

        <div class="projects-grid">
          <% projects.forEach(p => { %>
          <div class="project-card">
            <img src="<%= p.image %>" class="project-img" />
            <div class="project-content">
              <h3><%= p.title %></h3>
              <p><%= p.description %></p>
              <div class="proj-links">
                <a href="<%= p.github %>" target="_blank">GitHub</a>
                <a href="<%= p.live %>" target="_blank">Live</a>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- GITHUB STATS -->
    <section class="section" id="stats">
      <div class="container">
        <h2 class="section-title">GitHub Statistics</h2>

        <img src="<%= github.heatmap %>" class="stats-img" />
        <img src="<%= github.streak %>" class="stats-img" />
        <img src="<%= github.langs %>" class="stats-img" />
      </div>
    </section>

    <!-- CONTACT -->
    <section class="section" id="contact">
      <div class="container">
        <h2 class="section-title">Contact</h2>

        <div class="contact-links">
          <% if (contacts && contacts.length) { %> <% contacts.forEach(c => { %>
          <a href="<%= c %>" target="_blank"><%= c %></a>
          <% }) %> <% } else { %>
          <p>No contact links added.</p>
          <% } %>
        </div>
      </div>
    </section>

    <!-- FOOTER -->
    <footer class="footer">
      <p><%= footer || '' %></p>
    </footer>
  </body>
</html>
