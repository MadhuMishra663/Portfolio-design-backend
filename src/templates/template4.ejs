<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title><%= name %> — Portfolio</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --bg: #06070f;
        --panel: rgba(255, 255, 255, 0.03);
        --muted: #9aa4c7;
        --text: #eaf0ff;
        --accentA: #00e0ff;
        --accentB: #9b5cff;
        --glass: rgba(255, 255, 255, 0.04);
      }

      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto,
          "Helvetica Neue", Arial;
        background: radial-gradient(
            1200px 600px at 10% 10%,
            rgba(155, 92, 255, 0.06),
            transparent 10%
          ),
          radial-gradient(
            800px 400px at 90% 80%,
            rgba(0, 224, 255, 0.04),
            transparent 8%
          ),
          var(--bg);
        color: var(--text);
        -webkit-font-smoothing: antialiased;
      }

      .wrap {
        max-width: 1200px;
        margin: 28px auto;
        padding: 20px;
        position: relative;
        z-index: 1;
      }
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
      }
      .brand {
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .brand .dot {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--accentA), var(--accentB));
        box-shadow: 0 8px 30px rgba(155, 92, 255, 0.08);
        display: inline-block;
      }
      .brand h1 {
        margin: 0;
        font-size: 20px;
        letter-spacing: 0.2px;
      }
      .top-actions {
        display: flex;
        gap: 10px;
      }
      .btn {
        background: linear-gradient(90deg, var(--accentA), var(--accentB));
        padding: 10px 14px;
        border-radius: 12px;
        text-decoration: none;
        color: #04102b;
        font-weight: 700;
        display: inline-block;
      }
      .btn.ghost {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.06);
        color: var(--text);
      }

      /* hero area */
      .hero {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 30px;
        align-items: center;
      }
      @media (max-width: 940px) {
        .hero {
          grid-template-columns: 1fr;
        }
      }
      .hero-left {
        padding: 18px;
      }
      .intro {
        font-size: 34px;
        margin: 0 0 8px 0;
        line-height: 1.02;
        letter-spacing: -0.5px;
      }
      .sub {
        color: var(--muted);
        margin-bottom: 14px;
        font-weight: 600;
      }
      .quote {
        font-style: italic;
        color: rgba(234, 240, 255, 0.85);
        opacity: 0.9;
        margin-bottom: 12px;
      }

      /* neon rings behind profile */
      .profile-wrap {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 380px;
      }
      .rings {
        position: absolute;
        width: 360px;
        height: 360px;
        border-radius: 50%;
        display: inline-block;
        filter: blur(22px);
        opacity: 0.18;
      }
      .ring1 {
        background: conic-gradient(
          from 120deg,
          rgba(155, 92, 255, 0.9),
          rgba(0, 224, 255, 0.9)
        );
        transform: rotate(0deg);
      }
      .ring2 {
        width: 420px;
        height: 420px;
        opacity: 0.08;
        filter: blur(42px);
        transform: translateY(8px);
      }
      .profile-card {
        position: relative;
        border-radius: 18px;
        overflow: hidden;
        width: 300px;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(
          180deg,
          rgba(255, 255, 255, 0.02),
          rgba(255, 255, 255, 0.01)
        );
        border: 1px solid rgba(255, 255, 255, 0.04);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        transition: transform 0.45s cubic-bezier(0.2, 0.9, 0.2, 1);
      }
      .profile-card:hover {
        transform: translateY(-8px) rotate(-1.2deg) scale(1.02);
      }

      .profile-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }

      /* sections grid */
      .grid {
        display: grid;
        grid-template-columns: 1fr 320px;
        gap: 20px;
        margin-top: 22px;
      }
      @media (max-width: 940px) {
        .grid {
          grid-template-columns: 1fr;
        }
      }

      .panel {
        background: var(--panel);
        padding: 18px;
        border-radius: 12px;
        border: 1px solid var(--glass);
        backdrop-filter: blur(6px);
        transition: transform 0.35s ease, box-shadow 0.25s;
      }
      .panel:hover {
        transform: translateY(-6px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.6);
      }

      .section-title {
        font-weight: 700;
        margin: 0 0 10px 0;
      }

      /* interests & skills */
      .list-inline {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }
      .pill {
        padding: 8px 12px;
        border-radius: 999px;
        background: linear-gradient(
          90deg,
          rgba(255, 255, 255, 0.02),
          rgba(255, 255, 255, 0.01)
        );
        color: var(--muted);
        font-weight: 700;
        border: 1px solid rgba(255, 255, 255, 0.03);
        transition: 0.25s;
      }
      .pill:hover {
        color: white;
        transform: translateY(-5px);
        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.6);
      }

      /* projects with stagger reveal */
      .projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 14px;
      }
      .project {
        border-radius: 12px;
        overflow: hidden;
        background: linear-gradient(
          180deg,
          rgba(255, 255, 255, 0.02),
          rgba(255, 255, 255, 0.01)
        );
        border: 1px solid rgba(255, 255, 255, 0.03);
        transition: transform 0.35s, box-shadow 0.25s;
        transform-origin: center;
      }
      .project:hover {
        transform: translateY(-8px) rotate(-0.6deg);
        box-shadow: 0 22px 60px rgba(0, 0, 0, 0.6);
      }
      .project img {
        width: 100%;
        height: 140px;
        object-fit: cover;
        display: block;
      }
      .project .body {
        padding: 12px;
        color: var(--muted);
      }
      .project .body h4 {
        margin: 0 0 6px 0;
        color: var(--text);
      }
      .links a {
        color: var(--accentB);
        text-decoration: none;
        font-weight: 700;
        margin-right: 10px;
      }

      /* contact column */
      .right-column .small-panel {
        margin-bottom: 14px;
        display: flex;
        flex-direction: column;
        gap: 8px;
      }
      .contact a {
        color: var(--accentA);
        text-decoration: none;
        font-weight: 700;
      }

      /* footer */
      footer {
        text-align: center;
        margin-top: 26px;
        color: var(--muted);
        font-size: 14px;
      }

      /* reveal animations */
      .reveal {
        opacity: 0;
        transform: translateY(18px) scale(0.995);
        transition: opacity 0.6s ease,
          transform 0.6s cubic-bezier(0.2, 0.9, 0.2, 1);
      }
      .reveal.visible {
        opacity: 1;
        transform: translateY(0) scale(1);
      }

      /* small helpers */
      .muted {
        color: var(--muted);
      }
    </style>
  </head>
  <body>
    <div class="wrap">
      <header>
        <div class="brand">
          <span class="dot" aria-hidden="true"></span>
          <h1><%= name %></h1>
        </div>

        <div class="top-actions">
          <a class="btn ghost" href="<%= downloadUrl %>" target="_blank"
            >Download CV</a
          >
          <a class="btn" href="<%= resumeUrl %>" target="_blank">Resume</a>
        </div>
      </header>

      <!-- HERO -->
      <section class="hero">
        <div class="hero-left">
          <h2 class="intro">Hey — I'm <strong><%= name %></strong></h2>
          <div class="sub"><%= role || 'Fullstack Developer' %></div>
          <div class="quote"><%= quote || '' %></div>

          <div style="margin-top: 18px" class="panel reveal" data-delay="80">
            <div
              style="
                display: flex;
                justify-content: space-between;
                align-items: center;
              "
            >
              <div>
                <div class="muted">Qualification</div>
                <div style="font-weight: 700"><%= qualification || '-' %></div>
              </div>
              <div style="text-align: right">
                <div class="muted">Location</div>
                <div style="font-weight: 700">Remote</div>
              </div>
            </div>
          </div>
        </div>

        <div class="profile-wrap">
          <div class="rings ring1"></div>
          <div class="rings ring2"></div>

          <div class="profile-card reveal" data-delay="120">
            <% if (profileImageUrl) { %>
            <img src="<%= profileImageUrl %>" alt="<%= name %>" />
            <% } else { %>
            <div
              style="
                width: 100%;
                height: 100%;
                display: flex;
                align-items: center;
                justify-content: center;
                color: var(--muted);
              "
            >
              No photo
            </div>
            <% } %>
          </div>
        </div>
      </section>

      <!-- MAIN GRID -->
      <div class="grid" style="margin-top: 26px">
        <div>
          <section class="panel reveal" data-delay="160">
            <h3 class="section-title">About</h3>
            <p class="muted"><%= about || 'No description provided.' %></p>
          </section>

          <section
            class="panel reveal"
            data-delay="200"
            style="margin-top: 14px"
          >
            <h3 class="section-title">Projects</h3>
            <div class="projects" id="projects">
              <% projects.forEach((p, idx) => { %>
              <article class="project reveal" data-delay="<%= 230 + idx*60 %>">
                <% if (p.imageUrl) { %>
                <img src="<%= p.imageUrl %>" alt="<%= p.title %>" />
                <% } else { %>
                <div
                  style="
                    height: 140px;
                    background: linear-gradient(
                      90deg,
                      rgba(255, 255, 255, 0.02),
                      rgba(255, 255, 255, 0.01)
                    );
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    color: var(--muted);
                  "
                >
                  No image
                </div>
                <% } %>
                <div class="body">
                  <h4><%= p.title || 'Untitled' %></h4>
                  <p><%= p.description || '' %></p>
                  <div class="links">
                    <% if (p.github) { %><a
                      href="<%= p.github %>"
                      target="_blank"
                      >GitHub</a
                    ><% } %> <% if (p.live) { %><a
                      href="<%= p.live %>"
                      target="_blank"
                      >Live</a
                    ><% } %>
                  </div>
                </div>
              </article>
              <% }) %>
            </div>
          </section>

          <section
            class="panel reveal"
            data-delay="340"
            style="margin-top: 14px"
          >
            <h3 class="section-title">Interests</h3>
            <div class="list-inline">
              <% interests.forEach(i => { %>
              <div class="pill"><%= i %></div>
              <% }) %> <% if(!(interests && interests.length)){ %>
              <div class="pill">—</div>
              <% } %>
            </div>

            <h3 class="section-title" style="margin-top: 12px">Skills</h3>
            <div class="list-inline">
              <% skills.forEach(s => { %>
              <div class="pill"><%= s %></div>
              <% }) %> <% if(!(skills && skills.length)){ %>
              <div class="pill">—</div>
              <% } %>
            </div>
          </section>
        </div>

        <aside class="right-column">
          <div class="panel small-panel reveal" data-delay="380">
            <div class="section-title">Quick Links</div>
            <a class="contact" href="<%= resumeUrl %>" target="_blank"
              >View Resume</a
            >
            <a
              class="contact"
              href="<%= downloadUrl %>"
              target="_blank"
              style="display: block; margin-top: 8px"
              >Download CV</a
            >
          </div>

          <div class="panel reveal" data-delay="420">
            <div class="section-title">Contact</div>
            <div style="margin-top: 8px">
              <% if (contacts && contacts.length) { %> <% contacts.forEach(c =>
              { %>
              <div style="margin-bottom: 8px">
                <a href="<%= c %>" target="_blank"><%= c %></a>
              </div>
              <% }) %> <% } else { %>
              <div class="muted">No contact links added.</div>
              <% } %>
            </div>
          </div>

          <div class="panel reveal" data-delay="460" style="margin-top: 12px">
            <div class="section-title">Footer</div>
            <div class="muted" style="margin-top: 8px">
              <%= footer || "© " + new Date().getFullYear() + " " + name %>
            </div>
          </div>
        </aside>
      </div>
    </div>

    <script>
      // reveal-on-scroll with stagger based on data-delay
      (function () {
        const opts = {
          root: null,
          rootMargin: "0px 0px -10% 0px",
          threshold: 0.08,
        };
        const io = new IntersectionObserver((entries) => {
          entries.forEach((e) => {
            if (e.isIntersecting) {
              const el = e.target;
              const delay = parseInt(el.getAttribute("data-delay") || "0", 10);
              setTimeout(() => el.classList.add("visible"), delay);
              io.unobserve(el);
            }
          });
        }, opts);

        document.querySelectorAll(".reveal").forEach((n) => io.observe(n));

        // simple floating ring rotation
        const ring1 = document.querySelector(".ring1");
        const ring2 = document.querySelector(".ring2");
        let ang = 0;
        setInterval(() => {
          ang += 0.4;
          if (ring1) ring1.style.transform = `rotate(${ang}deg)`;
          if (ring2)
            ring2.style.transform = `rotate(${-ang / 1.6}deg) translateY(6px)`;
        }, 40);

        // tiny tilt for project cards on mousemove
        document.querySelectorAll(".project").forEach((card) => {
          card.addEventListener("mousemove", (ev) => {
            const r = card.getBoundingClientRect();
            const cx = r.left + r.width / 2;
            const cy = r.top + r.height / 2;
            const dx = (ev.clientX - cx) / 30;
            const dy = (ev.clientY - cy) / 30;
            card.style.transform = `translateY(-8px) rotateX(${-dy}deg) rotateY(${dx}deg)`;
          });
          card.addEventListener(
            "mouseleave",
            () => (card.style.transform = "")
          );
        });
      })();
    </script>
  </body>
</html>
