<!DOCTYPE html>
<html>
  <head>
    <title><%= portfolio.name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <style>
      body {
        font-family: Arial;
        margin: 0;
        background: #fafafa;
      }
      .header {
        text-align: center;
        padding: 30px;
        background: white;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.1);
      }
      .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        overflow: hidden;
        margin: auto;
      }
      .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .section {
        background: white;
        margin: 20px;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
        animation: fade 0.7s ease;
      }

      .projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 16px;
      }
      .project {
        border-radius: 8px;
        overflow: hidden;
      }
      .project img {
        height: 160px;
        width: 100%;
        object-fit: cover;
        transition: 0.3s;
      }
      .project img:hover {
        transform: scale(1.05);
      }
      @keyframes fade {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
    </style>
  </head>

  <body>
    <div class="header">
      <div class="avatar"><img src="<%= portfolio.profileImageUrl %>" /></div>
      <h1><%= portfolio.name %></h1>
      <p><%= portfolio.qualification %></p>
    </div>

    <div class="section">
      <h3>About</h3>
      <p><%= portfolio.about %></p>
    </div>

    <div class="section">
      <h3>Experience</h3>
      <p><%= portfolio.experience %></p>
    </div>

    <div class="section">
      <h3>Projects</h3>
      <div class="projects">
        <% portfolio.projects.forEach(p => { %>
        <div class="project">
          <% if(p.imageUrl){ %><img src="<%= p.imageUrl %>" /><% } %>
          <h4><%= p.title %></h4>
          <p><%= p.description %></p>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
