<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title><%= name %> â€” Portfolio</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;800&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --bg1: #0e0f2f;
        --bg2: #17193a;
        --card: rgba(255, 255, 255, 0.07);
        --glass: rgba(255, 255, 255, 0.15);
        --text: #ffffff;
        --muted: #a5b4fc;
        --accent: #6366f1;
        --accent2: #ec4899;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        background: linear-gradient(135deg, var(--bg1), var(--bg2));
        color: var(--text);
        font-family: "Poppins", sans-serif;
        overflow-x: hidden;
      }

      /* Global animations */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .fade {
        animation: fadeIn 0.8s ease-out;
      }

      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translateY(40px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Layout */
      .wrap {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
      }

      /* Header */
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 18px 0;
        animation: fadeIn 1s;
      }

      .logo {
        font-size: 26px;
        font-weight: 700;
        background: linear-gradient(90deg, var(--accent), var(--accent2));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .btn {
        padding: 10px 18px;
        background: linear-gradient(90deg, var(--accent), var(--accent2));
        border-radius: 10px;
        text-decoration: none;
        color: white;
        font-weight: 600;
        transition: 0.3s;
        display: inline-block;
      }
      .btn:hover {
        transform: translateY(-3px);
        opacity: 0.9;
      }

      /* HERO SECTION */
      .hero {
        margin-top: 40px;
        display: flex;
        align-items: center;
        gap: 40px;
        flex-wrap: wrap;
        animation: slideUp 1s ease-out;
      }

      .hero-text {
        flex: 1;
      }

      .hero-text h1 {
        font-size: 42px;
        margin: 0 0 10px 0;
      }

      .role {
        font-size: 20px;
        color: var(--muted);
      }

      .quote {
        font-style: italic;
        opacity: 0.8;
      }

      .profile-img {
        width: 280px;
        height: 280px;
        border-radius: 20px;
        object-fit: cover;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
        animation: fadeIn 1.2s ease-out;
        transition: 0.3s;
      }
      .profile-img:hover {
        transform: scale(1.03);
      }

      /* Cards / Sections */
      .card {
        background: var(--card);
        padding: 25px;
        border-radius: 14px;
        backdrop-filter: blur(10px);
        margin-top: 20px;
        animation: fadeIn 1s ease-out;
      }

      h2.section-title {
        margin-top: 0;
        font-size: 26px;
      }

      /* Skills / Interests */
      .chip {
        background: rgba(255, 255, 255, 0.1);
        padding: 8px 14px;
        border-radius: 50px;
        margin: 5px;
        display: inline-block;
        font-size: 14px;
        transition: 0.3s;
      }
      .chip:hover {
        background: var(--accent);
        transform: translateY(-4px);
      }

      /* PROJECTS */
      .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 18px;
        margin-top: 20px;
      }

      .project-card {
        background: var(--glass);
        padding: 0;
        border-radius: 14px;
        backdrop-filter: blur(10px);
        overflow: hidden;
        transition: 0.3s;
        animation: fadeIn 1.1s ease-out;
      }
      .project-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
      }

      .project-img {
        width: 100%;
        height: 160px;
        object-fit: cover;
      }

      .project-content {
        padding: 14px;
      }

      .project-content h3 {
        margin: 0 0 6px 0;
      }

      .proj-links a {
        text-decoration: none;
        color: var(--accent2);
        margin-right: 12px;
        font-weight: 600;
      }

      /* CONTACT LINKS */
      .contact-links a {
        color: var(--accent);
        display: inline-block;
        margin: 7px 0;
        transition: 0.3s;
      }
      .contact-links a:hover {
        transform: translateX(5px);
        color: var(--accent2);
      }

      /* FOOTER */
      footer {
        margin-top: 40px;
        text-align: center;
        opacity: 0.7;
        padding: 20px 0;
        font-size: 14px;
        animation: fadeIn 1.2s ease-out;
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <!-- HEADER -->
      <header>
        <div class="logo"><%= name %></div>
        <div>
          <a class="btn" href="<%= resumeUrl %>" target="_blank">Resume</a>
          <a class="btn" href="<%= downloadUrl %>" target="_blank"
            >Download CV</a
          >
        </div>
      </header>

      <!-- HERO -->
      <section class="hero fade">
        <div class="hero-text">
          <h1>Hello, I'm <%= name %> ðŸ‘‹</h1>
          <div class="role"><%= role %></div>
          <p class="quote"><%= quote %></p>
        </div>

        <img src="<%= profileImageUrl %>" class="profile-img" alt="Profile" />
      </section>

      <!-- ABOUT -->
      <section class="card fade">
        <h2 class="section-title">About Me</h2>
        <p><%= about %></p>

        <h3>Interests</h3>
        <% interests.forEach(i => { %>
        <span class="chip"><%= i %></span>
        <% }) %>
      </section>

      <!-- SKILLS -->
      <section class="card fade">
        <h2 class="section-title">Skills</h2>
        <% skills.forEach(s => { %>
        <span class="chip"><%= s %></span>
        <% }) %>
      </section>

      <!-- PROJECTS -->
      <section class="card fade">
        <h2 class="section-title">Projects</h2>

        <div class="projects-grid">
          <% projects.forEach(p => { %>
          <div class="project-card">
            <img src="<%= p.imageUrl %>" alt="" class="project-img" />
            <div class="project-content">
              <h3><%= p.title %></h3>
              <p><%= p.description %></p>
              <div class="proj-links">
                <a href="<%= p.github %>" target="_blank">GitHub</a>
                <a href="<%= p.live %>" target="_blank">Live</a>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </section>

      <!-- CONTACT -->
      <section class="card fade">
        <h2 class="section-title">Contact</h2>

        <div class="contact-links">
          <% contacts.forEach(c => { %>
          <a href="<%= c %>" target="_blank"><%= c %></a><br />
          <% }) %>
        </div>
      </section>

      <!-- FOOTER -->
      <footer><%= footer %></footer>
    </div>
  </body>
</html>
