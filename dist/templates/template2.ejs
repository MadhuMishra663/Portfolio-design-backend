<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= portfolio.name %> â€” Portfolio</title>

    <style>
      body {
        margin: 0;
        font-family: "Inter", sans-serif;
        background: #f6f8fc;
      }
      .wrapper {
        max-width: 900px;
        margin: auto;
        padding: 20px;
      }

      .header {
        text-align: center;
        animation: fadeIn 1s ease;
      }
      .avatar {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        overflow: hidden;
        margin: auto;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      }
      .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      h1 {
        margin-top: 15px;
        font-size: 32px;
        color: #222;
      }
      .links a {
        text-decoration: none;
        color: white;
        background: #6366f1;
        padding: 8px 14px;
        border-radius: 6px;
        margin: 0 5px;
        display: inline-block;
        transition: 0.3s;
      }
      .links a:hover {
        background: #4f46e5;
      }

      .section {
        background: white;
        margin-top: 20px;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 2px 14px rgba(0, 0, 0, 0.1);
        animation: slideUp 0.7s ease;
      }

      .projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 16px;
      }

      .project {
        border-radius: 10px;
        overflow: hidden;
        background: #fff;
        border: 1px solid #eee;
        transition: 0.3s;
      }
      .project:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      }
      .project img {
        width: 100%;
        height: 160px;
        object-fit: cover;
      }
      .project-content {
        padding: 12px;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
      @keyframes slideUp {
        from {
          transform: translateY(25px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <div class="header">
        <div class="avatar">
          <img src="<%= portfolio.profileImageUrl %>" />
        </div>
        <h1><%= portfolio.name %></h1>
        <p><%= portfolio.qualification %></p>

        <div class="links">
          <% if(portfolio.linkedin){ %>
          <a href="<%= portfolio.linkedin %>" target="_blank">LinkedIn</a>
          <% } %> <% if(portfolio.github){ %>
          <a href="<%= portfolio.github %>" target="_blank">GitHub</a>
          <% } %>
        </div>
      </div>

      <div class="section">
        <h2>About Me</h2>
        <p><%= portfolio.about %></p>
      </div>

      <div class="section">
        <h2>Experience</h2>
        <p><%= portfolio.experience %></p>
      </div>

      <div class="section">
        <h2>Projects</h2>
        <div class="projects">
          <% portfolio.projects.forEach(p => { %>
          <div class="project">
            <% if(p.imageUrl){ %>
            <img src="<%= p.imageUrl %>" />
            <% } %>
            <div class="project-content">
              <h4><%= p.title %></h4>
              <p><%= p.description %></p>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
