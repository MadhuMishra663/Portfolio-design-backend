<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= portfolio.name %></title>

    <style>
      body {
        background: #060b23;
        margin: 0;
        font-family: "Inter";
        color: white;
      }
      .container {
        max-width: 950px;
        margin: auto;
        padding: 20px;
      }
      .header {
        text-align: center;
        animation: fade 1.2s ease;
      }
      .avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        margin: auto;
        border: 3px solid #4f46e5;
        box-shadow: 0 0 25px #4f46e5;
      }
      .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      h1 {
        font-size: 34px;
        margin-top: 10px;
      }

      .glow-box {
        background: rgba(255, 255, 255, 0.05);
        margin-top: 20px;
        padding: 20px;
        border-radius: 14px;
        box-shadow: 0 0 18px rgba(79, 70, 229, 0.5);
        animation: glow 2s infinite alternate;
      }
      @keyframes glow {
        from {
          box-shadow: 0 0 5px #4f46e5;
        }
        to {
          box-shadow: 0 0 20px #4f46e5;
        }
      }

      .projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
        gap: 14px;
      }
      .project {
        background: #0b1231;
        padding: 12px;
        border-radius: 12px;
        transition: 0.3s;
        border: 1px solid rgba(255, 255, 255, 0.05);
      }
      .project:hover {
        transform: translateY(-6px);
        box-shadow: 0 0 25px #6366f1;
      }
      .project img {
        width: 100%;
        height: 150px;
        border-radius: 10px;
        object-fit: cover;
      }
      @keyframes fade {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="header">
        <div class="avatar">
          <img src="<%= portfolio.profileImageUrl %>" />
        </div>
        <h1><%= portfolio.name %></h1>
        <p><%= portfolio.qualification %></p>
      </div>

      <div class="glow-box">
        <h2>About</h2>
        <p><%= portfolio.about %></p>
      </div>

      <div class="glow-box">
        <h2>Experience</h2>
        <p><%= portfolio.experience %></p>
      </div>

      <div class="glow-box">
        <h2>Projects</h2>

        <div class="projects">
          <% portfolio.projects.forEach(p => { %>
          <div class="project">
            <% if(p.imageUrl){ %><img src="<%= p.imageUrl %>" /><% } %>
            <h4><%= p.title %></h4>
            <p><%= p.description %></p>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
